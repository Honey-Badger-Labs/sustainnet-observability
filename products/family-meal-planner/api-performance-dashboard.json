{
  "dashboard": {
    "id": null,
    "title": "Family Meal Planner - API Performance",
    "tags": ["family-meal-planner", "api", "performance", "technical"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "API Health Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"family-meal-planner-api\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "DOWN",
                    "color": "red"
                  },
                  "1": {
                    "text": "ONLINE",
                    "color": "green"
                  }
                },
                "type": "value"
              }
            ]
          }
        },
        "gridPos": {
          "h": 4,
          "w": 4,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Request Rate (req/s)",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=\"family-meal-planner-api\"}[5m]))",
            "refId": "A",
            "legendFormat": "Total Requests"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 4,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Error Rate (%)",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=\"family-meal-planner-api\",status=~\"5..\"}[5m])) / sum(rate(http_requests_total{job=\"family-meal-planner-api\"}[5m])) * 100",
            "refId": "A",
            "legendFormat": "5xx Error Rate"
          },
          {
            "expr": "sum(rate(http_requests_total{job=\"family-meal-planner-api\",status=~\"4..\"}[5m])) / sum(rate(http_requests_total{job=\"family-meal-planner-api\"}[5m])) * 100",
            "refId": "B",
            "legendFormat": "4xx Error Rate"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 12,
          "y": 0
        },
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [5],
                "type": "gt"
              },
              "query": {
                "params": ["A", "5m", "now"]
              }
            }
          ]
        }
      },
      {
        "id": 4,
        "title": "Response Time (p50, p95, p99)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=\"family-meal-planner-api\"}[5m]))",
            "refId": "A",
            "legendFormat": "p50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"family-meal-planner-api\"}[5m]))",
            "refId": "B",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket{job=\"family-meal-planner-api\"}[5m]))",
            "refId": "C",
            "legendFormat": "p99"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "yaxes": [
          {
            "format": "s",
            "label": "Response Time"
          }
        ]
      },
      {
        "id": 5,
        "title": "Database Query Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(database_query_duration_seconds_bucket{job=\"family-meal-planner-api\"}[5m]))",
            "refId": "A",
            "legendFormat": "p95 Query Time"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "yaxes": [
          {
            "format": "s",
            "label": "Query Time"
          }
        ]
      },
      {
        "id": 6,
        "title": "Database Connection Pool",
        "type": "stat",
        "targets": [
          {
            "expr": "database_connections_active{job=\"family-meal-planner-api\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 15, "color": "yellow"},
                {"value": 25, "color": "red"}
              ]
            }
          }
        },
        "gridPos": {
          "h": 4,
          "w": 4,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 7,
        "title": "Redis Cache Hit Rate (%)",
        "type": "gauge",
        "targets": [
          {
            "expr": "sum(rate(redis_hits_total{job=\"family-meal-planner-cache\"}[5m])) / (sum(rate(redis_hits_total{job=\"family-meal-planner-cache\"}[5m])) + sum(rate(redis_misses_total{job=\"family-meal-planner-cache\"}[5m]))) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 70, "color": "yellow"},
                {"value": 85, "color": "green"}
              ]
            }
          }
        },
        "gridPos": {
          "h": 4,
          "w": 4,
          "x": 4,
          "y": 16
        }
      },
      {
        "id": 8,
        "title": "Authentication Success Rate (%)",
        "type": "gauge",
        "targets": [
          {
            "expr": "(sum(rate(auth_login_success_total{job=\"family-meal-planner-api\"}[5m])) / sum(rate(auth_login_attempts_total{job=\"family-meal-planner-api\"}[5m]))) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 90, "color": "yellow"},
                {"value": 95, "color": "green"}
              ]
            }
          }
        },
        "gridPos": {
          "h": 4,
          "w": 4,
          "x": 8,
          "y": 16
        }
      },
      {
        "id": 9,
        "title": "Endpoints by Request Volume",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, sum by (endpoint) (rate(http_requests_total{job=\"family-meal-planner-api\"}[5m])))",
            "refId": "A",
            "format": "table"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 20
        }
      },
      {
        "id": 10,
        "title": "Slowest Endpoints (p95)",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, histogram_quantile(0.95, sum by (endpoint) (rate(http_request_duration_seconds_bucket{job=\"family-meal-planner-api\"}[5m]))))",
            "refId": "A",
            "format": "table"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 20
        }
      }
    ],
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}
