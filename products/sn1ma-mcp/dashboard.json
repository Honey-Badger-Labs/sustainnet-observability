{
  "dashboard": {
    "title": "SustainNet MCP Server",
    "description": "Real-time monitoring for MCP server - progressive disclosure, tool executions, and system health",
    "tags": ["mcp", "sustainnet", "ai-governance"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(mcp_requests_total[5m])",
            "legendFormat": "Requests/sec"
          }
        ],
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8}
      },
      {
        "id": 2,
        "title": "Tool Executions by Tier",
        "type": "graph",
        "targets": [
          {
            "expr": "sum by (tool) (mcp_tool_executions_total)",
            "legendFormat": "{{tool}}"
          }
        ],
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8}
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(mcp_errors_total[5m])",
            "legendFormat": "Errors/sec"
          }
        ],
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "alert": {
          "name": "High Error Rate",
          "conditions": [
            {
              "evaluator": {"params": [10], "type": "gt"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "frequency": "1m",
          "handler": 1,
          "message": "MCP server error rate exceeded threshold",
          "noDataState": "no_data",
          "executionErrorState": "alerting"
        }
      },
      {
        "id": 4,
        "title": "Response Time (Percentiles)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p99"
          }
        ],
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8}
      },
      {
        "id": 5,
        "title": "Progressive Disclosure - Users by Tier",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (tier) (mcp_user_tier_distribution)",
            "legendFormat": "{{tier}}"
          }
        ],
        "gridPos": {"x": 0, "y": 16, "w": 8, "h": 8}
      },
      {
        "id": 6,
        "title": "Audit Trail Volume",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(mcp_audit_entries_total[5m])",
            "legendFormat": "Audit entries/sec"
          }
        ],
        "gridPos": {"x": 8, "y": 16, "w": 8, "h": 8}
      },
      {
        "id": 7,
        "title": "OTS Compliance Score",
        "type": "gauge",
        "targets": [
          {
            "expr": "mcp_ots_compliance_score",
            "legendFormat": "Compliance %"
          }
        ],
        "gridPos": {"x": 16, "y": 16, "w": 8, "h": 8},
        "options": {
          "thresholds": [
            {"value": 0, "color": "red"},
            {"value": 70, "color": "yellow"},
            {"value": 90, "color": "green"}
          ]
        }
      }
    ],
    "refresh": "10s",
    "schemaVersion": 36
  }
}
